<div class="container">
  <%= link_to t('appointment_new'), new_appointment_path,  class: 'btn btn-primary btn-table' %> <br><br>
    <div class="table-responsive">
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th><%= t('user_name') %></th>
            <th><%= t('appointment_date') %></th>
            <th><%= t('appointment_type') %></th>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
          <% @appointments.each do |appointment| %>
            <tr>
              <td><%= appointment.user.name %></td>
              <td><%= appointment.appointment_date.strftime("%d/%m/%Y") %></td> 
              <td><%= appointment.appointment_type %></td>
              <% if current_user.admin? %>
                <td>
                  <%= link_to(appointment_history_path(appointment.user_id)) do %>
                    <i class="fa fa-list-alt" aria-hidden="true"></i>
                  <% end %>
                </td>
              <% end %>
              <td>
                <%= link_to(appointment) do %>
                  <i class="fa fa-eye"></i>
                <% end %>              
              </td>
              <td>
                <%= link_to(edit_appointment_path(appointment)) do %>
                  <i class="fas fa-pencil-alt"></i>
                <% end %>              
              </td>
              <% if current_user.admin? %>
                <td>
                  <%= link_to appointment_path(appointment), method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <i class="fa fa-trash"></i> 
                  <% end %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>