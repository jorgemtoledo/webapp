<div class="container">
  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th>Admin</th>
          <th>Name</th>
          <th>Position</th>
          <th>Department</th>
          <th>Workload</th>
          <th colspan="4"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.admin %></td>
            <td><%= user.name %></td>
            <td><%= user.position %></td>
            <td><%= user.department %></td>
            <td><%= user.workload %></td>
            <td>
              <%= link_to(user) do %>
                <i class="fa fa-eye"></i>
              <% end %>              
            </td>
            <td>
              <%= link_to(edit_user_path(user)) do %>
                <i class="fas fa-pencil-alt"></i>
              <% end %>              
            </td>
            <% if can? :destroy, User %>
              <td>
                <td>
                <%= link_to user_path(user), method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="fa fa-trash"></i> 
                <% end %>
                </td>
              </td>
            <% end %>        
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<br>

<% if current_user.admin? %>
  <%= link_to 'New User', new_user_path,  class: 'btn btn-primary btn-table' %>
<% end %>
</div>