<div class="container">
<div class="row">
  <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
    <div class="card card-signin my-5">
      <div class="card-body">
        <div class="text-center mb-4">
          <img class="mb-4" src="assets/login.svg" alt="" width="72" height="72">
          <%= image_tag("login.svg", width: "72", height: "72") %>
          <h1 class="h3 mb-3 font-weight-normal">Login</h1>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-label-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email", required: true %>
          </div><br />

          <div class="form-label-group">
            <%= f.password_field :password, autocomplete: "current-password", id: "inputPassword", class: "form-control", placeholder: "Password", required:true %>
          </div><br />        
          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block text-uppercase" %>
          </div>
        <% end %>



      </div>
    </div>
  </div>
</div>
</div>